.header {
  height: 50;
  padding-left: 10;
  color: #404040;
  font-weight: bold;  
  border-bottom-color: #e0e0e0;
  border-bottom-width: 0.5;
}

.left-icon {
  width: 18;
  margin-right: 5;
}

.arrow-icon {
  padding: 17;
  margin-right: 10;
  transform: rotate(-90);
}

.closed .arrow-icon {
  transform: rotate(90);
}

.closed .content {
  height: 0;
}
